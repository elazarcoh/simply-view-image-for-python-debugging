// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/python_test"
      ],
      "smartStep": true,
      "sourceMaps": true,
      // "outFiles": ["${workspaceFolder}/out/**/*", "!${workspaceFolder}/**/node_modules**/*"],
      "preLaunchTask": "Compile",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "presentation": {
        "group": "1_extension",
        "order": 1
      }
    },
    {
      "name": "Debug UI Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/extest",
      "args": [
        "run-tests",
        // "${workspaceFolder}/out/tests/ui-test/*.js",
        "${workspaceFolder}/out/tests/ui-test/*-expressions.test.js",
        "--mocha_config",
        "${workspaceFolder}/tests/ui-test/.mocharc-debug.js"
      ],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "Compile tests"
    }
  ]
}
