        "activityBarBadge.background": "#decfef",
        "activityBarBadge.foreground": "#15202b",
        "statusBar.background": "#29794e",
        "statusBar.border": "#29794e",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#369f67",
        "titleBar.activeBackground": "#29794e",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.border": "#29794e",
        "titleBar.inactiveBackground": "#29794e99",
        "titleBar.inactiveForeground": "#e7e7e799"
