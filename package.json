{
	"name": "simply-view-image-for-python-opencv-debugging",
	"displayName": "simply_view_image_for_python_opencv_debugging",
	"description": "simply view the image of the image variables when debugging python with opencv",
	"version": "0.0.5",
	"publisher": "johnguo",
	"engines": {
		"vscode": "^1.44.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/john-guo/simply-view-image-for-python-opencv-debugging"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onDebugResolve:python"
	],
	"main": "./dist/extension.js",
	"contributes": { 
		"commands": [
			{
				"command": "extension.viewimage",
				"title": "View Image",
				"enablement": "inDebugMode"
			}
		],
		"keybindings":[
			{
				"command": "extension.viewimage",
				"key": "ctrl+alt+q",
				"when": "inDebugMode"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"ts-loader": "^7.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	}
}
